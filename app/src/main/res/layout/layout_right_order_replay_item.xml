<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:layout_marginTop="8dp"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/replay_right_user_role"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/bbg2"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginRight="8dp"
                    android:text="发起人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/replay_right_user_name"
                    android:textSize="14sp"
                    android:text="用户名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/replay_right_time"
                android:textColor="#cccccc"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:text="2016/4/20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/replay_right_user_icon"
            android:layout_margin="8dp"
            android:src="@drawable/edit_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:layout_marginRight="16dp"
        android:paddingTop="16dp"
        android:background="@drawable/replay_right_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/replay_right_msg"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"
            android:text=""
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            />

        <ImageView
            android:layout_marginTop="24dp"
            android:paddingLeft="8dp"
            android:src="@drawable/edit_hd"
            android:scaleType="fitXY"
            android:id="@+id/replay_right_user_img_video"
            android:layout_width="160dp"
            android:layout_height="90dp" />

        <ImageView
            android:paddingRight="8dp"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/chatfrom_voice_playing_f1"
            android:id="@+id/replay_right_user_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>
