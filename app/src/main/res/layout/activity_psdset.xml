<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_comm_gray"
    android:orientation="vertical"
    tools:context="com.y.w.ywker.activity.ActivityPSDSet">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/layout_comm_toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="?attr/actionBarSize"
            >
        </android.support.v7.widget.Toolbar>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:id="@+id/layout_comm_toolbar_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="重置密码"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
       android:text="首次登陆,请重置密码"
        android:textColor="#999"
        />



    <LinearLayout
        android:id="@+id/login_center_layout"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="账号  "
                android:textColor="#333"
                android:gravity="center"
                />
            <TextView
                android:gravity="center"
                android:layout_marginLeft="10dp"
               android:text="13598847704"
                android:textColor="#999"
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <TextView
            android:background="#d6d6d6"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="验证码"
                android:gravity="center"
                android:textColor="#333"
                />
            <EditText
                android:layout_marginLeft="10dp"
                android:hint="请输入验证码"
                android:id="@+id/edt_num"
                style="@style/comm_edt_style"
                android:textSize="14sp"
                android:textColorHint="#999"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:id="@+id/btn_checked"
                android:layout_height="wrap_content"
                android:text="获取手机验证码"
                android:textSize="14sp"
                android:textColor="#fff"
                android:background="#3c78d8"
                />
        </LinearLayout>

        <TextView
            android:background="#d6d6d6"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="新密码"
                android:gravity="center"
                android:textColor="#333"
                />
            <EditText
                android:hint="新密码(密码长度6~12)"
                android:id="@+id/edt_new_pwd"
                android:password="true"
                style="@style/comm_edt_style"
                android:textColorHint="#999"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:text="完成"
        android:textColor="#fff"
        android:textSize="16dp"
        android:background="#3c78d8"
        android:layout_margin="16dp"
        android:layout_below="@id/login_center_layout"
        android:id="@+id/btn_login_in"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

</LinearLayout>
