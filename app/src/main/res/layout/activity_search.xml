<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_comm_gray"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <include layout="@layout/layout_comm_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back"
            android:id="@+id/btn_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/login_in_centerlayout_drawable"
        >
        <EditText
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/activity_search_edt"
            android:hint="请输入关键字"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColorHint="#000"
            android:paddingLeft="8dp"
            android:textSize="12sp"
            android:background="#00000000"
            android:textColor="#000000"
            android:paddingRight="8dp"
            />
        <ImageView
            android:id="@+id/search_btn_start"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/sousou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v7.widget.RecyclerView>

        <include
            android:layout_gravity="center"
            android:id="@+id/comm_search_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/comm_empty_view"
            />

    </FrameLayout>

</LinearLayout>