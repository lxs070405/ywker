<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/comm_new_order_comm_layout_style"
    android:gravity="center_vertical"
    >

    <ImageView
        android:src="@drawable/index_alla"
        android:layout_marginLeft="16dp"
        android:id="@+id/homt_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="16dp"
        android:id="@+id/homt_item_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="14sp"
        android:text="所有工单"
        android:textColor="#000"
        android:layout_height="wrap_content" />
    <TextView
        android:text="12"
        android:background="@drawable/green_round_rect_shape"
        android:id="@+id/home_item_num"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        />
</LinearLayout>