<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:gravity="center"
  android:layout_margin="4dp"
  >

  <ImageView
    android:id="@+id/home_custom_tab_icon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_centerHorizontal="true"
    android:scaleType="center"
    android:src="@drawable/home_contacts_drawable"
    />

  <TextView
    android:id="@+id/home_custom_tab_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/home_custom_tab_icon"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="2dp"
    android:maxLines="1"
    android:gravity="center"
    android:textColor="@color/home_custom_tab_text_color"
    android:textSize="12sp"
    />

</LinearLayout>
